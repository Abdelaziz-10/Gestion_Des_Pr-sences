@model IEnumerable<Gestion_Des_prèneces.Models.ModelsView.AbsenceView>

@{
    ViewData["Title"] = "Absences";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pt-5 text-center">
    <h1 style="color: lightcoral">Absences</h1>
</div>

<table class="table table-bordered mt-4">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.DateDebutAb)</th>
            <th>@Html.DisplayNameFor(model => model.DateFinAb)</th>
            <th>@Html.DisplayNameFor(model => model.NomCl)</th>
            <th>@Html.DisplayNameFor(model => model.Prenom)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DateDebutAb.ToString()</td>
                <td>@item.DateFinAb.ToString()</td>
                <td>@item.NomCl</td>
                <td>@item.Prenom</td>
                <td>
                    <form method="post" asp-action="RedirectToEditAbsence" asp-controller="Responsables" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.IdAbsence" />
                        <button type="submit" class="btn btn-sm btn-primary">Modifier</button>
                    </form>
                    @* <form method="post" asp-action="DeleteAbsences" asp-controller="Responsables" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.IdAbsence" />
                        <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                    </form> *@
                    <button class="btn btn-sm btn-danger"
                            onclick="confirmDelete(@item.IdAbsence, this)">
                        Supprimer
                    </button>
                    <button class="btn btn-danger btn-sm"
                            onclick="deleteItem({
                            url: '/Responsables/DeleteAbsenceAjax',
                            id: @item.IdAbsence,
                            button: this,
                            csrfToken: document.querySelector('input[name=__RequestVerificationToken]').value
                        })">
                        Supprimer
                    </button>

                    <!-- Optional if you still want direct routes -->
                    @* 
                    <a asp-action="DetailsAbsences" asp-route-id="@item.IdAbsence">Détails</a> |
                    <a asp-action="DeleteAbsences" asp-route-id="@item.IdAbsence">Supprimer</a> 
                    *@
                </td>
            </tr>
        }
    </tbody>
</table>
<form id="tokenForm">@Html.AntiForgeryToken()</form>


<div class="mt-3">
    <a asp-action="Bienvenu" asp-controller="Responsables" class="btn btn-secondary">Retour au menu</a>
</div>
@section Scripts {
    <script>
        function deleteItem({ url, id, button, csrfToken, rowSelector = 'tr' }) {
        //function confirmDelete(id, button) {
            Swal.fire({
                title: 'Êtes-vous sûr ?',
                text: "Cette action est irréversible !",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Oui, supprimer',
                cancelButtonText: 'Annuler'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show spinner
                    Swal.fire({
                        title: 'Suppression...',
                        text: 'Veuillez patienter',
                        didOpen: () => Swal.showLoading(),
                        allowOutsideClick: false,
                        allowEscapeKey: false
                    });

                    fetch('/Responsables/DeleteAbsenceAjax', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        body: JSON.stringify({ id: id })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Remove the row from table
                            let row = $(button).closest(rowSelector);
                            row.css('background-color', '#f8d7da'); // optional fade color
                            row.fadeOut(500, () => row.remove());

                            Swal.fire(
                                'Supprimé !',
                                'L\'élément a été supprimé avec succès.',
                                'success'
                            );
                        } else {
                            Swal.fire('Erreur', data.message || 'Une erreur est survenue.', 'error');
                        }
                    })
                    .catch(() => {
                        Swal.fire('Erreur', 'Erreur du serveur.', 'error');
                    });
                }
            });
        }
    </script>
}
