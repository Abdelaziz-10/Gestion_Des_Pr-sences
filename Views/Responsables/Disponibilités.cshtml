@model IEnumerable<Gestion_Des_prèneces.Models.ModelsView.DisponibilitéView>

@{
    ViewData["Title"] = "Disponibilités";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="pt-5 text-center">
    <h1 style="color: lightcoral">Disponibilités</h1>

</div>
<div class="pt-3"></div>

<table class="table table-hover table-bordered ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateMiseEnDisponibilité)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateHDebutDisponibilité)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateHFinDisponibilité)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.NomCl)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateMiseEnDisponibilité)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateHDebutDisponibilité)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateHFinDisponibilité)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomCl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    <form method="post" asp-action="RedirectToEditDisponibilité" asp-controller="Responsables" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.IdDisponibilité" />
                        <button type="submit" class="btn btn-sm btn-primary">Modifier</button>
                    </form>
                   
                    
                    <button class="btn btn-danger btn-sm"
                            onclick="deleteItem({
                                url: '/Responsables/DeleteDisponibilitéAjax',
                                id: @item.IdDisponibilité,
                                button: this,
                                csrfToken: document.querySelector('input[name=__RequestVerificationToken]').value
                            })">
                        Supprimer
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Bienvenu" asp-controller="Responsables" class="btn btn-secondary">Retour au menu</a>
</div>