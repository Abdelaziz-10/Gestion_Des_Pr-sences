@model IEnumerable<Gestion_Des_prèneces.Models.ModelsView.CollaborateursModelView>


@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<div class="pt-5 text-center">
    <h1 style="color: lightcoral">des Collaborateurs</h1>
</div>
<div class="pt-3"></div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Nom de la collaborateurs
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrenomCl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomCl)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrenomCl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>


            </tr>
        }
    </tbody>
</table>

<a asp-action="ManageCollaborateurs" class="btn btn-primary mb-3">
    Ajouter un Collaborateur
</a>
<div class="mt-3 mb-3">
    <a asp-action="Bienvenu" asp-controller="Responsables" class="btn btn-secondary">Retour au menu</a>
</div>

