@model IEnumerable<Gestion_Des_prèneces.Models.ModelsView.RespoCollaborateurView>


@{
    ViewData["Title"] = "Index";
}

<div class="pt-5 text-center">
    <h1 style="color: lightcoral">Responsables</h1>

</div>
<div class="pt-3"></div>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Nom de la responsable
            </th>
            <th>
                Prenom
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomRe)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrenomRe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>


            </tr>
        }
    </tbody>
</table>

<div class="col-lg-6">
    <a asp-action="Bienvenu" asp-controller="Collaborateurs" class="btn btn-secondary">Retour au menu</a>
</div>